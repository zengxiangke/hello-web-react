{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "build/dist",
    "noEmit": true,
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}